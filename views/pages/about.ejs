    <div class="jumbotron text-center">


        <h2>Graficas</h2>

        <div class="chart_box">
            <div id="canvas"><canvas id="myChart"></canvas></div>
        </div>

    <h2>Tablas</h2>
        
    
</div>



<script type="text/javascript">

    var datos = JSON.stringify("<%- items %>");
    datos = datos.replace('"','')
    datos = datos.replace('"','')
    const datosSeparados = datos.split(',');
    var etiquetas = JSON.stringify("<%- labels %>")
    etiquetas = etiquetas.replace('"','');
    etiquetas = etiquetas.replace('"','');
    const etiqseparadas = etiquetas.split(',');

    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: etiqseparadas,
            datasets: [{
                label: 'PIB B.C.',
                data: datosSeparados,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>